<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="@dimen/image_list_item_corner_radius"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_list_item_margin">

    <ImageView
            android:id="@+id/image"
            android:background="@color/black"
            android:layout_width="@dimen/image_list_item_width"
            android:layout_height="@dimen/image_list_item_height"/>

</android.support.v7.widget.CardView>
