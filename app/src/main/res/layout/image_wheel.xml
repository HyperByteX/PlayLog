<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.hyperbyte.playlogtest.MainActivity">

    <ImageView
            android:id="@+id/image_wheel_image"
            android:layout_width="@dimen/image_wheel_radius"
            android:layout_height="@dimen/image_wheel_radius"
            android:layout_centerInParent="true"
            android:src="@drawable/image_wheel_drawable"/>

    <Button
            android:id="@+id/image_wheel_button"
            android:layout_width="@dimen/image_wheel_button_radius"
            android:layout_height="@dimen/image_wheel_button_radius"
            android:layout_centerInParent="true"
            android:background="@drawable/image_wheel_button_drawable"
            android:text="@string/image_wheel_button_default_text"
            android:textColor="@color/white"
            android:textSize="@dimen/image_wheel_button_text_size"
            android:textStyle="bold"/>

</RelativeLayout>
